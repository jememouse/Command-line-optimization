# æ¡ä»¶åŠ è½½ - æ€§èƒ½ä¼˜åŒ–
# ============================================================================
# å»¶è¿ŸåŠ è½½é‡å‹æ’ä»¶
lazy_load() {
    local plugin_name="$1"
    local plugin_path="$2"

    if [[ -f "$plugin_path" ]]; then
        eval "$plugin_name() { unfunction $plugin_name; source $plugin_path; $plugin_name \$@ }"
    fi
}

# å»¶è¿ŸåŠ è½½ conda
if [[ -f "$HOME/miniforge3/etc/profile.d/conda.sh" ]]; then
    lazy_load conda "$HOME/miniforge3/etc/profile.d/conda.sh"
fi

